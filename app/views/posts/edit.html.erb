<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>投稿編集画面</h2>

    <% if @post.errors.any? %>
     <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーが発生しました</h2>
       <ul>
        <% @post.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
     </div>
    <% end %>

    <%= form_with model:@post,local:true do |f| %>

    <div class="form-group">
     <label for="標題">標題</label>
     <p><%= f.text_field :title,class:"form-control",id:"標題" %></p>
    </div>

    <div class="form-group">
     <label for="内容">内容</label>
     <p><%= f.text_area :text,class:"form-control",id:"内容" %></p>
    </div>

     <p><%= f.submit "Update Book",class:"btn btn-success" %></p>

    <%= link_to "Show", post_path(@post.id) %> | <%= link_to "Back",user_path(current_user.id) %>
    <% end %>
   </div>
  </div>
 </div>