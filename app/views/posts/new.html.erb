<div class= "container">
  <div class="row">
　  <div class="col-12">
　    <h2 class="mb-5">投稿ページ</h2>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= @post.errors.count %>件のエラーが発生しました</h2>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %>
            <% end %>
              </li>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@post,local:true do |f| %>
        <div class="form-group">
          <label for="標題">標題</label>
          <%=f.text_field :title,class:"form-control",:placeholder => "標題", id:"標題"%>
        </div>
        <div class="form-group">
          <label for="タグ">タグ</label>
          <%=f.text_field :tag_list, value: @post.tag_list.join(','),:placeholder => " , で区切ると複数登録できます　",class:"form-control", id:"タグ"%>
        </div>
        <div class="form-group">
          <label for="投稿内容">投稿内容</label>
          <%=f.text_area :text,class:"form-control",:placeholder => "相談内容を入力してください", id:"投稿内容" %>
        </div>
        <p><%= f.submit'投稿',class:"btn btn-success" %></p>
      <% end %>
    </div>
  </div>
</div>
  
  