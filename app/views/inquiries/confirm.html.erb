<div class="container-fluid">
  <div class="row">
    <div class="col-lg-8 offset-2">
      <table class="table-borderless mt-5">
       <tbody>
        <tr class="mb-4">
         <th>お名前</th>
         <td class="mx-2">　<%= @inquiry.name %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td class="mx-2">　<%= @inquiry.email %></td>
        </tr>

        <tr>
          <th>メッセージ</th>
          <td>　<%= @inquiry.message %></td>
        </tr>

        <tr>
          <th>項目</th>
          <td>　<%= @inquiry.subject_i18n %></td>
        </tr>

       </tbody>
      </table>

      <%= form_with model:@inquiry, local:true do |f| %>
       <%= f.hidden_field :name %>
       <%= f.hidden_field :email %>
       <%= f.hidden_field :phone_number %>
       <%= f.hidden_field :subject %>
       <%= f.hidden_field :message %>
       <div class="d-flex justify-content-center my-3"><%= f.submit '送信',class:"text-center btn btn-success" %></div>
      <% end %>
      <%= form_with model:@inquiry, url:back_path, local:true do |f| %>
       <%= f.hidden_field :name %>
       <%= f.hidden_field :email %>
       <%= f.hidden_field :phone_number %>
       <%= f.hidden_field :subject %>
       <%= f.hidden_field :message %>
       <div class="d-flex justify-content-center"><%= f.submit '入力画面に戻る' %></div>
      <% end %>

    </div>
  </div>
</div>