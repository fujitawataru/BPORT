<div class= "container">
  <div class= "row">
    <div class="col-12">
    <h2>問い合わせ</h2>
    
    <% if @inquiry.errors.any? %>
       <div id="error_explanation">
        <h2><%= @inquiry.errors.count %>件のエラーが発生しました</h2>
          <ul>
           <% @inquiry.errors.full_messages.each do |message| %>
           <li><%= message %>
            <% end %>
            </li>
          </ul>
        </div>
       <% end %>

    <%= form_with model:@inquiry,url:confirm_path, local:true do |f| %>
     <div class="form-group">
       <%= f.label :name, '名前' %>
       <%= f.text_field :name, autofocus: true, class: 'form-control',id:'名前' %>
     </div>
     
     <div class="form-group">
       <%= f.label :email, 'メールアドレス' %>
       <%= f.text_field :email, autofocus: true, class: 'form-control',id:'メール' %>
     </div>

     <div class="form-group">
       <%= f.label :message, 'メッセージ*' %>
       <%= f.text_area :message, size: '10x10', class: 'form-control',id:'メッセージ' %>
     </div>

     <div class="form-group">
       <%= f.select :subject, Inquiry.subjects.keys.map {|k| [I18n.t("enums.inquiry.subject.#{k}"), k]} %>
     </div>

     <div>
       <%= f.submit '入力内容確認' %>
     </div>
   <% end %>
   </div>
 </div>
</div>