<h1>DM</h1>

<% @anotherEntries.each do |entry| %>
  <%= link_to user_path(entry.user.id) do %>
  <h5><strong><%= entry.user.name %></strong></h5>
  <% end %>
<% end %>


<hr>


<div class="col-10 offset-1">
<% if @chats.present? %>
  <% @chats.each do |chat| %>
   <% if chat.user.id == current_user.id %>
    <div class="text-right">
      <span class="curent_user">
      <strong class="current_user"><%= chat.message %></strong></span><%= link_to "削除", chat_path(chat.id), method: :delete, class:"btn btn-sm btn-danger" %>
    </div>
     <hr>
   <% else %>
   <div class="text-left">
    <span class="visited_user"><strong><%= chat.message %></strong></span>
    <%= link_to user_path(chat.user.id) do %>
     <p class="mt-1"><small><%= chat.user.name %>さん</small></p>
    <% end %>
   </div>
   <% end %>

  <% end %>

<% else %>

  <h3 class="text-center">メッセージはまだありません</h3>

<% end %>

</div>

<div class="text-center">
<%= form_with model:@chat, local:true do |f| %>
  <%= f.text_field :message, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <%= f.submit "投稿する" %>
<% end %>
</div>