<h1>DM</h1>

<h4>参加者</h4>
<% @entries.each do |entry| %>
  <h5><strong><a href="/users/<%= entry.user.id %>"><%= entry.user.email%>さん</a></strong></h5>
<% end %>

<hr>
<% if @chats.present? %>
  <% @chats.each do |chat| %>
   <p><strong><%= chat.message %></strong><%= link_to "削除", chat_path(chat.id), method: :delete %></p>
   <small>by <strong><a href="/users/<%= chat.user_id %>"><%= chat.user.email %>さん</a></strong></small>
    <hr>
    <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @chat do |f| %>
  <%= f.text_field :message, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>