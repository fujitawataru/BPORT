<div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :image, size: '50x50', format: 'jpeg',  fallback: 'no.image.png' %>
      <table class="table">
       <tbody>
        <tr>
         <th>name</th>
         <td><%= @user.name %></td>
        </tr>

        <tr>
         <th>area</th>
         <td><%= @user.area %></td>
        </tr>

        <tr>
         <th>category</th>
         <td><%= @user.category %></td>
        </tr>

        <tr>
         <th>introduction</th>
         <td><%= @user.introduce %></td>
        </tr>

        <tr>
         <th>担当者名</th>
         <td><%= @user.person %></td>
        </tr>
       </tbody>
      </table>

      <div class="text-center">
       <%= link_to follows_user_path(@user) do %>
        <%= @following_users.count %>フォロー
     <% end %>
     <span> | </span>
     <%= link_to followers_user_path(@user) do %>
     <%= @follower_users.count %>フォロワー
     <% end %>
      </div>


　　 <% if current_user == @user %>

       <%= link_to edit_user_path(@user.id) do %>
       <i class="btn btn-outline-secondary btn-block fas fa-user-cog mb-2"></i>
       <% end %>

       <%= link_to new_post_path do %>
        <i class=" btn btn-outline-secondary btn-block fas fa-plus-circle mb-2">新規投稿</i>
       <% end %>

       <%= link_to "DM履歴一覧",rooms_path,class:"btn btn-outline-secondary btn-block"%>

     <% else %>
       <% if @isRoom == true %>
         <p class="text-center"><%= link_to "チャットへ", room_path(@roomId),class:"btn btn-outline-secondary btn-block" %></p>
       <% else %>
         <%= form_for @room do |f| %>
          <%= fields_for @entry do |e| %>
           <%= e.hidden_field :user_id, :value=> @user.id %>
          <% end %>
         <%= f.submit "チャットを始める" %>
        <% end %>
       <% end %>
     <% end %>



   <% if current_user != @user %>

    <% if current_user.following?(@user) %>
     <p class="text-center"><%= link_to 'フォローを外す', user_relationships_path(@user.id), method: :delete, class: "btn-lg btn-danger" %></p>
    <% else %>
     <p class="text-center"><%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class:"btn-lg btn-success" %></p>
    <% end %>

  <% end %>

    </div>

    <div class="col-md-9">
    <h2>投稿一覧</h2>
     <table class="table table-hover">
      <thead>
       <tr>
        <th></th>
        <th>標題</th>
        <th>相談内容</th>
        <th>タグ</th>
        <th>コメント件数</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>

        <% @posts.each do |post| %>
        <tr>
         <td><%= link_to user_path(post.user_id) do %>
             <%= attachment_image_tag @user, :image,width: '30%', height: '30%', format: 'jpeg', fallback: "no.image.png" %>
             <% end %></td>

         <td><%= link_to post.title, post_path(post.id) %></td>

         <td><%= post.text %></td>

         <td><% post.tag_list.each do |tag| %>
             <span class="btn  btn-sm btn-primary mt-1"><%= tag %></span>
             <% end %></td>

         <td><%= post.comments.count %>件</td>

         <% end %>
        </tr>
      </tbody>
     </table>
    </div>
 </div>


   </div>
</div>