<div class="container">
  <div class="row justify-content-center">
      <h1 class="mt-5 mb-5">フォロー一覧</h1>
  </div>
  <div class="row follow">
    <% @users.each do |user| %>
      <div class="col-2 text-right mt-2">
        <%= link_to user_path(user),class:"link" do %>
         <%= attachment_image_tag user, :image, size: '50x50', fallback: "no.image.png",class:"circle" %>
        <% end %>
      </div>
      <div class="col-10 mt-2">
        <%= link_to user_path(user),class:"link" do %>
          <p><strong><%= user.name %></strong></p>
          <p><%= user.introduce %><p>
          <p><%= user.posts.count%> 投稿</p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>